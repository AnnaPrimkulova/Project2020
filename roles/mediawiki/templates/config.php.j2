<?php

define('DB_NAME', {{ mediawiki_database.name }});
define('DB_USER', {{ mediawiki_database.user }});
define('DB_PASSWORD', {{ mediawiki_database.password }});
define('DB_HOST', {{ mediawiki_database.server | default('localhost') }});

$pdo = new PDO("mysql:host=" . DB_HOST . "; dbname=" . DB_NAME, DB_USER, DB_PASSWORD);
$pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
$pdo->setAttribute(PDO::ATTR_EMULATE_PREPARES, false);
